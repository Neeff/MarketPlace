
<div class="w-2/3 mx-auto">
  <br />
   <%= paginate @products%>
  <div class="bg-white shadow-md rounded my-6">



    <table class="text-left w-full border-collapse"> <!--Border collapse doesn't work on this site yet but it's available in newer tailwind versions -->
      <thead>
        <tr>
          <th class="py-4 px-6 bg-grey-300 font-bold uppercase text-sm text-grey-900 border-b border-grey-300">Product</th>
          <th class="py-4 px-6 bg-grey-300 font-bold uppercase text-sm text-grey-900 border-b border-grey-light">Stock</th>
          <td class="py-4 px-6 bg-grey-300 font-bold uppercase text-sm text-grey-900 border-b border-grey-ligth">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product|%>
          <tr class="hover:bg-grey-lighter" id="<%= product.id%>">
            <td class="py-4 px-6 border-b border-grey-300"> <%= product.name %> </td>
            <td class="py-4 px-6 border-b border-grey-300"> <%= product.stock%></td>
            <td class="py-4 px-6 border-b border-grey-300">
              <%= link_to edit_user_product_path(current_user, product), class: "text-grey-500 font-bold py-1 px-3 rounded text-xs bg-yellow-400 hover:bg-yellow-500", data: { remote: true}  do %>
                Edit <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to user_product_path(current_user, product), class: "text-white font-bold py-1 px-3 rounded text-xs bg-green-500 hover:bg-green-700", data: { remote: true } do  %>
                View <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to user_product_path(current_user, product), class: "text-white font-bold py-1 px-3 rounded text-xs bg-red-600 hover:bg-red-700", method: :delete, data: {remote: true, confirm: 'Are you Sure' } do %>
                Delete <i class="fas fa-trash-alt"></i>
            <%end%>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
   <%= paginate @products%>
</div>



<div class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center">
    <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>

    <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">

      <div class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-white text-sm z-50">
        <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
          <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
        </svg>
        <span class="text-sm">(Esc)</span>
      </div>

      <!-- Add margin if you want to see some of the overlay behind the modal-->
      <div class="modal-content py-4 text-left px-6">
        <!--Title-->
        <div class="flex justify-between items-center pb-3">
          <p class="text-2xl font-bold" id="title_modal"></p>
          <div class="modal-close cursor-pointer z-50">
            <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
              <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
            </svg>
          </div>
        </div>

        <!--Body-->
        <div class="body_modal">

        </div>
        <!--Footer-->
        <div class="flex justify-end pt-2">

          <button class="modal-close px-4 bg-indigo-500 p-3 rounded-lg text-white hover:bg-indigo-400">Close</button>
        </div>

      </div>
    </div>
  </div>


